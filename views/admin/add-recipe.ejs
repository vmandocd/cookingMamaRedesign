<% layout('layout') -%>
<br>
<br>
<div class="row">
  <div class="col-lg-6 col-md-offset-3">

    <% if (message.length > 0) { %>
      <br>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
      </div>
    <% } %>
    <% if (errors.length > 0) { %>
      <br>
      <div class="alert alert-danger alert-dismissible">
          <strong><%= errors %></strong>
      </div>
    <% } %>

    <form method="post">

      <h1> Add a new recipe </h1>

      <div class="form-group">
        <label="name"><h4>Name: </h4></label>
        <input type="text" placeholder="Name of recipe" class="form-control" name="name">
      </div>
      <div class="form-group">
        <label="Ingredients"><h4>Ingredients: </h4></label>
        <textarea type="text" placeholder="Add ingredients" class="form-control" name="ingredients" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label="instructions"><h4>Instructions: </h4></label>
        <textarea type="text" placeholder="Add instructions" class="form-control" name="instructions" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label="image"><h4>Image URL: </h4></label>
        <input type="url" placeholder="http://" class="form-control" name="image" required pattern="https?://.+" >
      </div>

      <button type="submit" class="btn btn-success">Submit</button>

    </form>
  </div>
</div>
