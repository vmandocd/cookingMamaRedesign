<% layout('layout') -%>
<br>
<br>
<div class="row">
  <div class="col-lg-6 col-md-offset-3">

    <% if (message.length > 0) { %>
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
      </div>
    <% } %>


    <form method="post">

      <h1> Add a new recipe </h1>

      <div class="form-group">
        <label="name">Name: </label>
        <input type="text" class="form-control" name="name">
      </div>
      <div class="form-group">
        <label="Ingredients">Ingredients: </label>

        <textarea type="text" class="form-control" name="ingredients" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label="instructions">Instructions: </label>
        <textarea type="text" class="form-control" name="instructions" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label="image">Image URL: </label>
        <input type="text" class="form-control" name="image">
      </div>

      <button type="submit" class="btn btn-success">Submit</button>

    </form>
  </div>
</div>
