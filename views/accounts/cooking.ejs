<%- layout('cookingLayout') -%>

<!--container for cooking instructions-->
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="main-content" id="top">

        <div class ="recipe">
          <h2><strong><%= user.profile.name %>,</strong></h2>
          <h3>Let's cook some <%= product.name %>!</h3>
        <ul>
          <li><%= product.ingredients %></li>
          <li><%= product.instructions %></li>
        </ul>
        </div>

        <div class="pager">
          <li class="previous"><a href="#">Previous</a></li>
          <li class="next"><a href="/completedCook">Next</a></li>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="main-content">
          <div class="timer-group">
            <div class="timer hour">
              <div class="hand"><span></span></div>
              <div class="hand"><span></span></div>
              </div>
            <div class="timer minute">
              <div class="hand"><span></span></div>
              <div class="hand"><span></span></div>
              </div>
            <div class="timer second">
              <div class="hand"><span></span></div>
              <div class="hand"><span></span></div>
              </div>
            <div class="face">
              <h2>Little Cooker</h2>
              <p id="lazy">00:00:00</p>
              </div>
            </div>
      </div>
    </div>
  </div>
</div>
