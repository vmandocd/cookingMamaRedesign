<% layout('layout') -%>

<div class="container">

  <div class="logo-container" style="margin: auto;">
    <img src="http://i.imgur.com/AwdQPJJ.png" class="img-responsive" style="margin: 40px auto 0 auto; display: block;">
  </div>
</div>

<div class="row">
  <div class="col-lg-6 col-md-offset-3">

    <% if (message.length > 0) { %>
      <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismmiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= message %>
      </div>
    <% } %>

    <form method="post" role="form">

      <div class="form-group">
        <label="name">Email: </label>
        <input type="email" class="form-control" name="email" placeholder="Email" required >
      </div>
      <div class="form-group">
        <label="name">Password: </label>
        <input type="password" class="form-control" name="password" placeholder="Password" required>
      </div>
      <div class="span7 text-center">
      <button type="submit" class="btn btn-success" >Submit</button>
      </div>
    </form>
  </div>
</div>
